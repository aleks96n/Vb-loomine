<div class="login">


<% provide(:title, 'Sign up') %>


<%=content_tag :h1 do %>
  <%=t 'log.signup' %>
<%end %>
<br>

<div class="row">
  <div class="col-md-6 col-md-offset-0">
    <%= form_for(@user) do |f| %>
      <%= f.label t 'signup.name' %>
      
      <%= f.text_field :name %>
        <br>
        <br>
        
      <%= f.label :email %>
      <%= f.email_field :email, :id => "validate" %>
      
       <br>
        <br>
      <%= f.label t 'signup.password' %>
      <%= f.password_field :password, :id => "pass"  %>
        <br>
        <br>
      <%= f.label t 'signup.confirmation' %>
      <%= f.password_field :password_confirmation, :id => "repass" %>
        <br>
        <br>
      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <a href="/auth/twitter" class = "btn"><i class="fa fa-th-large fa-twitter"></i> Sign up with twitter </a>
    <br />
    <a href="/auth/facebook" class = "btn"><i class="fa fa-th-large fa-facebook"></i> Sign up with facebook</a>
    
  </div>
</div>
</div>

<script type="text/javascript" src="jquery-1.3.2.min.js"></script>
<script type="text/javascript">

$(document).ready(function() {  
 $("#validate").keyup(function(){
    
    var email = $("#validate").val();
  
    if(email != 0)
    {
    if(isValidEmailAddress(email))
    {
    $("#validate").css({
  "background-color": "#8FE38F"
    });
    } else {
    $("#validate").css({
  "background-color": "#FFAD99"
    });
    }
    } else {
    $("#validate").css({
  "background-image": "none"
    }); 
    }
  
    });
  
    });
  
    function isValidEmailAddress(emailAddress) {
    var pattern = new RegExp(/^(("[\w-\s]+")|([\w-]+(?:\.[\w-]+)*)|("[\w-\s]+")([\w-]+(?:\.[\w-]+)*))(@((?:[\w-]+\.)*\w[\w-]{0,66})\.([a-z]{2,6}(?:\.[a-z]{2})?)$)|(@\[?((25[0-5]\.|2[0-4][0-9]\.|1[0-9]{2}\.|[0-9]{1,2}\.))((25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\.){2}(25[0-5]|2[0-4][0-9]|1[0-9]{2}|[0-9]{1,2})\]?$)/i);
    return pattern.test(emailAddress);
    }
    
    
    
    
    $(document).ready(function() {  
 $("#pass").keyup(function(){
    
    var pass = $("#pass").val();
  
    if(pass != 0)
    {
    if(isValidPass(pass))
    {
