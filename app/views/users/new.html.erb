<div class="login">


<% provide(:title, 'Sign up') %>


<%=content_tag :h1 do %>
  <%=t 'log.signup' %>
<%end %>

<div class="row">

  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@user) do |f| %>
      <%= f.label t 'signup.name' %>
      <%= f.text_field :name %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label t 'signup.password' %>
      <%= f.password_field :password %>

      <%= f.label t 'signup.confirmation' %>
      <%= f.password_field :password_confirmation %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
    <a href="/auth/twitter" class = "btn"><i class="fa fa-th-large fa-twitter"></i> Sign up with twitter </a>
    <br />
    <a href="/auth/facebook" class = "btn"><i class="fa fa-th-large fa-facebook"></i> Sign up with facebook</a>
  </div>
</div>
</div>
